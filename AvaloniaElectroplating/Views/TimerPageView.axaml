<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mv="clr-namespace:AvaloniaElectroplating.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:DataType="mv:TimerPageViewModel"
             x:Class="AvaloniaElectroplating.Views.TimerPageView">
    <Border CornerRadius="10"
            Padding="20"
            BoxShadow="inset 0 0 2 0 DarkGray"
            >
        <Grid RowDefinitions="*, *" ColumnDefinitions="*, *" >
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top">Timer</TextBlock>

            <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                       IsVisible="{Binding IsTimerEnabled}"
                       Text="{Binding TimeString}"
                       FontSize="28">20:00</TextBlock>

            <NumericUpDown  Grid.Row="1" Minimum="1" FormatString="0" Increment="1" IsVisible="{Binding !IsTimerEnabled}"
                           Value="{Binding SelectedTime}">
            </NumericUpDown>

            <StackPanel Grid.Column="1" Spacing="10" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                <StackPanel Spacing="10">
                    <Button IsVisible="{Binding IsTimerEnabled}" Command="{Binding AddOneMinuteCommand}">+1:00</Button>
                    <Button Command="{Binding SetTimerCommand}" Content="{Binding ButtonString}">
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>