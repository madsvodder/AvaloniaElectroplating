<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaElectroplating.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:NotesPageViewModel"
             x:Class="AvaloniaElectroplating.Views.NotesPageView">
    
    <Grid ColumnDefinitions="auto, *">
        <StackPanel>
            <Button Command="{Binding CreateNewNoteCommand}">Add Note</Button><ListBox ItemsSource="{Binding NotesCollection}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding NoteName}"></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <TextBox Grid.Column="1"></TextBox>
    </Grid>
</UserControl>
