<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaElectroplating.ViewModels"
             x:Name="Root"
             xmlns:lucide="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaElectroplating.Views.CalculatePageView"
             x:DataType="vm:CalculatePageViewModel">
    <Grid ColumnDefinitions="Auto, *, Auto" Margin="5">
        <!-- Sidebar -->
        <Grid Grid.Column="0" RowDefinitions="Auto, Auto" VerticalAlignment="Bottom">
            
            <!-- Timer -->
            <ContentControl Width="200" Content="{Binding TimerPage}"></ContentControl>
            <!-- Settings and info -->
            <Border Margin="5" Grid.Row="1" VerticalAlignment="Bottom" Grid.Column="0"  CornerRadius="20"
                    BoxShadow="0 4 12 0 #40000000" Height="50">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Command="{Binding NavigateToSettingsCommand}" Background="Transparent">
                        <lucide:Lucide Icon="Settings"></lucide:Lucide>
                    </Button>
                    <Button Command="{Binding NavigateToAboutCommand}" Background="Transparent">
                        <lucide:Lucide Icon="Info"></lucide:Lucide>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
        
        
        <!-- Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *, Auto">
            <!-- Options -->
            <Border
                CornerRadius="20 20 0 0"
                BoxShadow="0 0 10 0 #40000000"
                Margin="5 5 5 0"
                Padding="10"
                >
                <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="25" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- Type -->
                    <StackPanel Spacing="10">
                        <TextBlock Text="Type"></TextBlock>
                        <ComboBox SelectedItem="{Binding SelectedFastenerType}" Width="100"
                                  ItemsSource="{Binding FastenerTypes}">
                        </ComboBox>
                    </StackPanel>
                    <!-- Metric size -->
                    <StackPanel Spacing="10">
                        <TextBlock Text="Metric size"></TextBlock>
                        <ComboBox Width="100" ItemsSource="{Binding AvailableSizes}"
                                  SelectedItem="{Binding SelectedFastenerSize}"
                                  SelectedIndex="0">
                        </ComboBox>
                    </StackPanel>
                    <!-- Thread length -->
                    <StackPanel Spacing="10">
                        <TextBlock Text="Thread length (mm)"></TextBlock>
                        <NumericUpDown Watermark="mm" Minimum="0" FormatString="0" Width="125" Value="{Binding Value}"></NumericUpDown>
                    </StackPanel>
                    <!-- Plus button -->
                    <Button Command="{Binding AddFastenerToListCommand}">Add</Button>
                    <Button Command="{Binding ClearFastenersCommand}">Clear</Button>
                </StackPanel>
            </Border>
            
            <!-- List -->
            <Border
                Grid.Row="1"
                CornerRadius="0 0 20 20"
                BoxShadow="0 4 12 0 #40000000"
                Margin="5 0 5 5"
                >
                <Grid RowDefinitions="15*, 3*">
                    <ScrollViewer IsScrollChainingEnabled="true" AllowAutoHide="false">
                        <ListBox ItemsSource="{Binding FastenersToCalc}" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                                        <Button
                                            Command="{Binding #Root.((vm:CalculatePageViewModel)DataContext).RemoveFastenerCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="1">
                                            Delete
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="32" Text="{Binding TotalString}">Result!</TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>