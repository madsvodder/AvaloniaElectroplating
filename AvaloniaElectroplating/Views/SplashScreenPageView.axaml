<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mv="clr-namespace:AvaloniaElectroplating.ViewModels"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="350"
        Width="350"
        Height="350"
        WindowStartupLocation="CenterScreen"
        x:Class="AvaloniaElectroplating.Views.SplashScreenPageView"
        x:DataType="mv:SplashScreenViewModel"
        SystemDecorations="None"
        Title="SplashScreenWindowView">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid RowDefinitions="*, Auto" ColumnDefinitions="*, Auto">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                Launching Application...
            </Label>
            <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding StartupMessage}"></Label>
            <Button Grid.Row="1" Grid.Column="1" Command="{Binding CancelCommand}">Cancel</Button>
        </Grid>
    </Border>
</Window>
